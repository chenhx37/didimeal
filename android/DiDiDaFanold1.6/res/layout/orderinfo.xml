<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/back"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <TextView
            android:text="内容"
            android:gravity="center"
            android:background="#aa0000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="内容"
            android:gravity="center"
            android:background="#aa0000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <TextView
            android:text="时间"
            android:gravity="center"
            android:background="#aa0000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="时间"
            android:gravity="center"
            android:background="#aa0000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <TextView
            android:text="悬赏"
            android:gravity="center"
            android:background="#aa0000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <TextView
            android:text="悬赏"
            android:gravity="center"
            android:background="#aa0000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <GridLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:rowCount="3"
        android:columnCount="7">
        <TextView
            android:text="发布者"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:background="#66ccff"/>
        <TextView
            android:text="昵称"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="#aa0000"/>
        <TextView
            android:text="具体昵称"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:background="#aa0000"/>
        <TextView
            android:text="手机"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="#aa0000"/>
        <TextView
            android:text="具体手机"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:background="#aa0000"/>
    </GridLayout>
    
    <GridLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:rowCount="3"
        android:columnCount="7">
        <TextView
            android:text="接单者"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:background="#66ccff"/>
        <TextView
            android:text="昵称"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="#aa0000"/>
        <TextView
            android:text="具体昵称"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:background="#aa0000"/>
        <TextView
            android:text="手机"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="#aa0000"/>
        <TextView
            android:text="具体手机"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:background="#aa0000"/>
    </GridLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFC0CB"
        android:paddingBottom="0dp" >

        <ImageButton
            android:id="@+id/UserInfoMainPageBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:scaleType="centerInside"
            android:src="@drawable/mainw" />

        <ImageButton
            android:id="@+id/UserInfoPublishBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:onClick="PublishMainBtn"
            android:scaleType="centerInside"
            android:src="@drawable/postw" />

        <ImageButton
            android:id="@+id/UserInfoNewsBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:onClick="NewsMainBtn"
            android:scaleType="centerInside"
            android:src="@drawable/messagew" />

    </LinearLayout>
            
</RelativeLayout>

