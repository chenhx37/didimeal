<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="发布订单"
            android:textColor="#000000"
            android:textSize="24dp" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="内容"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/POConetntET"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_above="@+id/linearLayout1"
                android:layout_alignParentLeft="true"
                android:layout_weight="0.65"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>
>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="0dp" >

        <ImageButton
            android:id="@+id/publishMainPageBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:onClick="MainPublishBtn"
            android:scaleType="centerInside"
            android:src="@drawable/mainpagebtn" />

        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/publishPublishBtn"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_weight="0.33"
            android:scaleType="centerInside"
            android:src="@drawable/postbtn" />

        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/publishNewsBtn"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="0.33"
            android:onClick="NewsPulishBtn"
            android:scaleType="centerInside"
            android:src="@drawable/messagebtn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="饭堂"
            android:textColor="#000000"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinnerCantee"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout01"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_above="@+id/POConetntET"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="价格"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/POPriceET"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout02"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_above="@+id/POConetntET"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="悬赏"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/POJewalET"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />
    </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout5"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="时间"
        android:textColor="#000000"
        android:textSize="18dp" />
    
</RelativeLayout>